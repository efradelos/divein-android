<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.efradelos.divein" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".dives.DivesActivity"
            android:label="@string/title_activity_dives"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.efradelos.divein.MainActivity" />
        </activity>
        <activity
            android:name=".divers.DiversActivity"
            android:label="@string/title_activity_divers"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.efradelos.divein.MainActivity" />
        </activity>
        <activity
            android:name=".divers.DiverActivity"
            android:label="@string/title_activity_diver"
            android:parentActivityName=".divers.DiversActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.efradelos.divein.divers.DiversActivity" />
        </activity>

        <provider
            android:name=".data.DiveInProvider"
            android:authorities="com.example.android.divein" >
        </provider>

    </application>

</manifest>

